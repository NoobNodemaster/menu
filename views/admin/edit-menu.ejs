<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-menu<% } else { %>add-menu<% } %>" method="POST" enctype="multipart/form-data" >
            <div class="form-control">
                <label for="foodName">Food Name</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'foodName') ? 'invalid' : '' %>"
                    type="text" 
                    name="foodName" 
                    id="foodName" 
                    value="<% if (editing || hasError) { %><%= menu.title %><% } %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'price') ? 'invalid' : '' %>"
                    type="number" 
                    name="price" 
                    id="price" 
                    step="0.01" 
                    value="<% if (editing || hasError) { %><%= menu.price %><% } %>">
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= menu._id %>" name="menuId">
            <% } %>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit"><% if (editing) { %>Update Menu<% } else { %>Add Menu<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>